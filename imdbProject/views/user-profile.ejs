<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>IMDb Clone - Kullanıcı Profili</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <% if (user) { %>
      <p>Giriş yapan kullanıcı: <%= user.username %></p>
      
    <% } %>

    <% if (!user) { %>
      <p><a href="/login">Giriş yap</a> veya <a href="/register">kayıt ol</a> </p>
    <% } else { %>
      <p><a href="/logout">Çıkış yap</a></p>
    <% } %>
    
    <h1>Kullanıcı Profili</h1>

    <div class="row">
      <div class="col">
        <h2>Puanladığım Filmler</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Film İsmi</th>
              <th>Kullanıcı Puanı</th>
              <th>IMDb Puanı</th>
            </tr>
          </thead>
          <tbody>
            <% userRatings.forEach(function(rating) { %>
              <tr>
                <td><%= rating.Title %></td>
                <td><%= rating.Rating %></td>
                <td><%= rating.Imdbrating %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      
      <div class="col">
        <h2>En Çok İzlediğim Aktörler</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Aktör İsmi</th>
              <th>İzlenen Film Sayısı</th>
              <th>İzlenen Filmler</th>
            </tr>
          </thead>
          <tbody>
            <% topActors.forEach(function(actor) { %>
              <tr>
                <td><%= actor.ActorName %></td>
                <td><%= actor.FilmCount %></td>
                <td><%= actor.Films %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
